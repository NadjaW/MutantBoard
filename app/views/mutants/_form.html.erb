<%= form_for @mutant do |f| %>
  <% if @mutant.errors.any? %>
  <div id="error_explanation">
    <h2>Errors:</h2>
    <% @mutant.errors.full_messages.each do |msg| %>
      <%= msg %><br/>
    <% end %>
  </div>
  <% end %>

  <br>
  <br>

  <p>
    <div class="field form-group">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name %>
        </div>
    </div>
  </p>


  <p>
    <div class="field form-group">
        <%= f.label :superpower, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.text_field :superpower %>
        </div>
    </div>
  </p>

  <p style="margin:20px">
    <%= f.label :cv %><br>
    <%= f.text_area :cv %>
  </p>

  <p style="margin:20px">
    <%= f.submit class: 'btn btn-success btn-xs' %>
  </p>

<% end %>