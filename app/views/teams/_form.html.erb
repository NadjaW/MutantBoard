<%= form_for @team do |f| %>
  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2>Errors:</h2>
        <% @team.errors.full_messages.each do |msg| %>
          <%= msg %><br/>
        <% end %>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name %>
      </div>
  </div>

  <p style="margin:20px">
    <%= f.label :task %><br>
    <%= f.text_area :task %>
  </p>

  <p style="margin:20px">
    <%= f.submit class: 'btn btn-success btn-xs' %>
  </p>


<% end %>